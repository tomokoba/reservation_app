<div class="container">
  <div class="row">
    <div class="mx-auto col-6">
      <div class="my-4">
        <h2 class="text-center">ログイン</h2>
      </div>
      <%= form_with model: @user, url: user_session_path, local: true do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
      <div class="form-group mb-4">
        <%= f.label "メールアドレスの入力", class: "font-weight-bold" %><br />
        <%= f.email_field :email, autofocus: true, placeholder: "例) example@example.com", class: "form-control" %>
      </div>
      <div class="form-group mb-4">
        <%= f.label "パスワードの入力", class: "font-weight-bold mb-0" %><br />
        <div class="mb-2">半角英数字でご入力ください。</div>
        <%= f.password_field :password, autocomplete: "off", placeholder: "例) AbcDe0123fg", class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "ログインする", class: "btn btn-primary w-100" %>
      </div>
      <% end %>
      <div class="mt-4">
        はじめてご利用の方ですか？ <%= link_to "登録する", new_user_registration_path, class: "underline_link" %>
      </div>
    </div>
  </div>
</div>
